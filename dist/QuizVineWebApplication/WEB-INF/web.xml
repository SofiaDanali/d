<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <filter>
        <filter-name>ConsumerFilter</filter-name>
        <filter-class>com.quizvine.webapp.consumer.ConsumerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ConsumerFilter</filter-name>
        <url-pattern>/consumer/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>ProfileFilter</filter-name>
        <filter-class>com.quizvine.webapp.consumer.ProfileFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ProfileFilter</filter-name>
        <url-pattern>/consumer/Profile/*</url-pattern>
        <url-pattern>/consumer/Profile</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.quizvine.webapp.auth.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.quizvine.webapp.auth.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.quizvine.webapp.auth.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>com.quizvine.webapp.consumer.ProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateInfoServlet</servlet-name>
        <servlet-class>com.quizvine.webapp.consumer.UpdateInfoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdatePasswordServlet</servlet-name>
        <servlet-class>com.quizvine.webapp.consumer.UpdatePasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionnaireServlet</servlet-name>
        <servlet-class>com.quizvine.webapp.consumer.QuestionnaireServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RecommendedWinesServlet</servlet-name>
        <servlet-class>com.quizvine.webapp.consumer.RecommendedWinesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateInfoServlet</servlet-name>
        <url-pattern>/consumer/Profile/UpdateInfo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/consumer/Profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdatePasswordServlet</servlet-name>
        <url-pattern>/consumer/Profile/UpdatePassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionnaireServlet</servlet-name>
        <url-pattern>/consumer/Profile/Questionnaire</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RecommendedWinesServlet</servlet-name>
        <url-pattern>/consumer/RecommendedWines</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
